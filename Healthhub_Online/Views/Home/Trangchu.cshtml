
@{
    ViewBag.Title = "Trangchu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Healthhub_Online.Models
@{
    var u = Session["user"] as Healthhub_Online.Models.NguoiDung;
    var userBS = Session["userBS"] as Healthhub_Online.Models.QuanTri;
}
<br />
@{
    if (u != null)
    {
        <div>
            <h3>Chúc mừng bạn @u.HoTen đã đăng nhập thành công.</h3>
            <br />
            Cập nhật thông tin cá nhân ngay!.
            <a class="btn-success" href="@Url.Action("Details", "Nguoidung", new { id = u.IDNguoiDung })"> Click </a>
        </div>
    }
    else
    {
        <center> <img src="~/Common/images/bs.jpg" /></center>
        <div>
            <center><h3> Bác sĩ @userBS.HoTen đã đăng nhập thành công.</h3></center>
            <br />
            <center>Xem lịch khám ngay!.</center>
        </div>

    }
}



